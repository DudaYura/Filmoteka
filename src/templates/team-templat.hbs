<div class="modal-team">
    <div class="team-container">
        {{#each this}}
        <div class="team__item">
            <div class="front-card">
                <img class="team__img" src="{{photo}}" alt="{{role}}" />
                <p class="team__item-text">{{role}}</p>
                <p class="team__item-title">{{name}}</p>
                <p class="team__item-title">{{surname}}</p>
            </div>
            <div class="back-card">
                <p class="team__item-text">{{tasks}}</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>